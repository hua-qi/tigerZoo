    "lint-staged": {
        "src/**/*.{js.jsx,ts,tsx,json,css,scss,md}": [
            "prettier --write"
        ],
        "src/**/*.{js.jsx.ts,tsx}": [
            "eslint"
        ]
    },
    "scripts": {
        "start": "craco start",
        "build": "craco build",
        "test": "craco test",
        "eject": "react-scripts eject",
